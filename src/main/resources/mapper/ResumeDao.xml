<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mazic.dao.ResumeDao">
    <!--目的:为dao接口方法提供sql语句配置
    即针对dao接口中的方法编写我们的sql语句-->

<!--这里面的id指代什么-->
    <update id="updateResume">
        UPDATE resume
        SET selfIntroduce = #{article.},
        selfAbility = #{article},
        selfLanguage = #{article},
        selfEducation = #{article},
        selfExperience = #{selfExperience},
        selfHobby = #{selfHobby}
        WHERE resumeid=#{resumeId}

    </update>

    <insert id="insertResume">
        INSERT INTO resume (selfIntroduce,selfAbility,selfLanguage,selfExperience,selfEducation,selfHobby)
        VALUES (#{selfIntroduce},#{selfAbility},#{selfLanguage},#{selfExperience},#{selfEducation},#{selfHobby})
    </insert>
    <insert id="insertResume2">
        INSERT INTO resume (selfIntroduce,selfAbility,selfLanguage,selfExperience,selfEducation,selfHobby)
        VALUES (#{selfResume.selfIntroduce},#{selfResume.selfAbility},#{selfResume.selfLanguage},#{selfResume.selfExperience},#{selfResume.selfEducation},#{selfResume.selfHobby})
    </insert>
    <select id="queryResume" resultType="resume">
        SELECT *
        FROM resume
        WHERE resumeid=#{resumeId}
    </select>


</mapper>